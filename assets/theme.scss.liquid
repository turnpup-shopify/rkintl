/*================ Outer Container ================*/
@mixin outer-container($width: $maxWidth) {
  @include clearfix;
  max-width: $width;
  margin: {
    left: auto;
    right: auto;
  }
}

@mixin grid($gutterless: false, $reverse: false) {
  @include clearfix();
  margin: 0;
  padding: 0;
  font-size: 0;

  @if $gutterless == false {
    margin-right: -$gridGutter;
    &>* {
      padding-right: $gridGutter; // turnpup from padding-left: $gridGutter; 30px to padding-right
    }
  }

  @if $reverse == true {
    direction: rtl;
    // text-align: left;
    &>* {
      direction: ltr;
      text-align: left;
      display: inline-block;
    }
  } @else {
    direction: ltr;
    &>* {
      display: inline-block;
    }
  }
  link {
    display: none;
  }
}

@mixin grid-item($columns: $gridColumns) {
  @include box-sizing(border-box);
  font-size: emModify($baseFontSize);
  min-height: 1px;
  vertical-align: top;
  width: ($columns / $gridColumns) * 100%;
}

