      background-position: center center;
      {% if settings.turnpup_collection_squares %}
      	height:100%;
      	width:100%;     
      {% endif %}
      
    }
    figure {
      position: relative;
      display: block;
      overflow: hidden;
      margin: 0 auto;
      background-position: center center;
      background-size: contain;
      {% if settings.turnpup_collection_squares %}
      	height:100%;
      	width:100%;     
