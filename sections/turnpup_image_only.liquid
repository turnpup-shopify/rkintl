<div class="tp_home_top module">
  <div class="tp_home_top_wrapper">
    {% if section.settings.link != blank %}
      <a href="{{ section.settings.link }}" class="slide__item-image">
    {% else %}
      <div class="slide__item-image">
    {% endif %}
    <div class="slide__item-image-contain desktop">
      {% if section.settings.image != blank %}
        {% assign image = section.settings.image %}
        {% assign image_widths = '400,600,800,900,1000,1200,1500,1800,2000,2400' %}
        {% include 'theme-rias' %}
        <img class="slide__image slide__image-desktop lazyload"
          {% comment %}src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="{% endcomment %}
          src="{{ image | img_url: '2400x' }}"   
          data-src="{{ image_url_pattern }}"
          data-widths="[{{ image_widths }}]"
          data-aspectratio="{{ image.aspect_ratio }}"
          data-sizes="auto"
          alt="{{ image.alt | escape }}">
        {% if forloop.first %}
        <noscript>
          <img src="{{ image | img_url: '5000x' }}" alt="{{ image.alt | escape }}">
        </noscript>
        {% endif %}
        {% assign height = image.height | plus: 0 %}
        {% assign width = image.width | plus: 0 %}
        {% assign padding_ratio = height | times: 100 | divided_by: width %}
      {% else %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% assign padding_ratio = 40 %}
      {% endif %}
    </div>
    <div class="slide__item-image-contain mobile">
      {% if section.settings.mobile_image != blank %}
        {% assign image = section.settings.mobile_image %}
        {% assign image_widths = '400,600,800,1000,1200' %}
        {% include 'theme-rias' %}
        <img class="slide__image slide__image-mobile lazyload"
          src="{{ image | img_url: '2400x' }}"   
          data-src="{{ image_url_pattern }}"
          data-widths="[{{ image_widths }}]"
          data-aspectratio="{{ image.aspect_ratio }}"
          data-sizes="auto"
          alt="{{ image.alt | escape }}">
        {% if forloop.first %}
        <noscript>
          <img src="{{ image | img_url: '5000x' }}" alt="{{ image.alt | escape }}">
        </noscript>
        {% endif %}
        {% assign height = image.height | plus: 0 %}
        {% assign width = image.width | plus: 0 %}
        {% assign padding_ratio = height | times: 100 | divided_by: width %}
      {% else %}
        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% assign padding_ratio = 40 %}
      {% endif %}
    </div>
  </div>
  </a>
    <div class="turnpup-just-image-text-wrapper">
      <div>
        {% if section.settings.label != blank %}
        <p class="tp_image_only_label"> {{ section.settings.label }} </p> 
        {% endif %}
        {% if section.settings.title != blank %}
          <div class="content-contain tp_home_top_title">
            <h2 style="color:{{section.settings.turnpup_title_color}}">{{ section.settings.title | escape }}</h2>
          </div>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="rte content-contain" id="turnpup_text" {% if section.settings.turnpup_text_size != blank %}style="font-size:{{section.settings.turnpup_text_size}};color:{{section.settings.turnpup_text_color}}"{% endif %}>
            {{ section.settings.text }}
          </div>
        {% endif %}
        {% if section.settings.button_link != blank and section.settings.button_label != blank %}
          <a style="position:relative" href="{{ section.settings.button_link }}" class="turnpup_button_home_top">{{ section.settings.button_label | escape }}</a>
<!--           <div class="sketch_circle" style="position:relative; top: -90px; z-index: 1;width: 241px;height: 97px;">
            <svg viewBox="0 0 235 133" fill="none" stroke="#f9bfac" stroke-miterlimit="10" stroke-width="3px" stroke-linecap="round" stroke-linejoin="round">
                <path d="M184.35 24.79a201.56 201.56 0 00-105.64 7.34C56.83 39.88 36.25 52 23.87 69.48c-4.26 6-7.55 13.11-5.84 20 2.61 10.55 15.59 16.45 27.61 19.19 44.07 10 91.12-3.36 130.25-23.61 16.53-8.55 46.62-24 40.81-41.16-4.28-12.67-39.81-11.52-56.16-8.43"></path>
            </svg>          
          </div> -->
        {% endif %}
      </div>
    </div>
  </div>
  </div>
<style>
  .tp_image_only_label {
    color: {{ section.settings.label_color }};
    font-size: {{ section.settings.label_font_size }}px;
    font-family: {{ section.settings.label_font_family }};
    font-weight: {{ section.settings.label_font_weight }};
  }
  .slide__image {
    height: 100%;
    width: 100%;
    overflow: hidden;
    object-fit: cover;
    object-position: center;
  } 
  .tp_home_top {
    border-bottom: 1px solid {{section.settings.turnpup_bottom_border_color}};
    overflow: hidden;
  }
  .tp_home_top .slide__item-image-contain.desktop {
    display: block;
  }
  .tp_home_top .slide__item-image-contain.mobile {
    display: none;
  }
  .tp_home_top_wrapper {
	position: relative;
    margin-top:{{section.settings.turnpup_margin_top}};
    height: calc({{section.settings.height}} - {{section.settings.turnpup_margin_top}});
  } 
  .turnpup-just-image-text-wrapper {
    position: absolute;
    transform: translateY(-{{ section.settings.turnpup_margin_topbottom_container }});
    top: calc( {{ section.settings.turnpup_margin_topbottom_container }} - {{ section.settings.turnpup_margin_top }} / 2);
    padding: 0px {{ section.settings.turnpup_margin_left_right }};
    z-index: 809;
    width: {{section.settings.turnpup_text_width}};;
  }
  .turnpup-content-wrapper {
   	vertical-align: middle;
    height: auto;
  }
  .slide__item-image {
	height: 100%;
    width: 100%;
  }
  .slide__item-image-contain.desktop {
	height: 100%;
    width: 100%;
    margin: 0 auto;
  }
  a.turnpup_button_home_top {
    color: {{ section.settings.color_accent }};
    font-size: {{ section.settings.turnpup_button_size }}; 
    border-color: {{ section.settings.color_accent }};
  }
  a.turnpup_button_home_top:hover,
  a.turnpup_button_home_top:focus {
    color: {{ section.settings.turnpup_hover_txt_color }};
    border-color: {{ section.settings.color_accent }}; 
    background-color: {{ section.settings.color_accent }};
  }
  .content-contain.tp_home_top_title {
    font-size: {{ section.settings.turnpup_title_size }};
  }
  @media screen and (max-width: 700px) {
    .turnpup-just-image-text-wrapper {
      display: block;
      padding: 0px {{ section.settings.turnpup_mobile_margin_left_right }};
      margin-top: 20px;
      width: 90%
    }
    .content-contain.tp_home_top_title {
      font-size: {{ section.settings.turnpup_mobile_title_size }};
    }
    .turnpup-just-image-text-wrapper {
      top: calc( {{ section.settings.turnpup_margin_topbottom_container }} + {{ section.settings.turnpup_margin_top }} / 2);
    }
    .tp_home_top {
      height: {{ section.settings.mobile_height }};      
    }  
    .tp_home_top_wrapper {
      height: {{ section.settings.mobile_height }};
    }
    .tp_home_top .slide__item-image-contain.desktop {
      display: none;
    }
    .tp_home_top .slide__item-image-contain.mobile {
      display: block;
    }
/*     .slide__item-image, .slide__item-image-contain.desktop, .slide__image {
      height: 100%;
      margin-top: 0px;
    } */
