{% schema %}
  {
    "name": "Slider Section",
    "class": "slider-section",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#939393"
      },
      {
        "type": "color",
        "id": "wave_bottom_color",
        "label": "Wave Bottom Color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "spacing_top",
        "label": "Spacing Top",
        "default": "90px"
      },
      {
        "type": "text",
        "id": "spacing_bottom",
        "label": "Spacing Bottom",
        "default": "50px"
      },
      {
        "type": "text",
        "id": "mobile_spacing_top",
        "label": "Mobile: Spacing Top",
        "default": "20px"
      },
      {
        "type": "text",
        "id": "mobile_spacing_bottom",
        "label": "Mobile: Spacing Bottom",
        "default": "50px"
      },
      {
        "type": "text",
        "id": "header_font_size",
        "label": "Header Font Size",
        "default": "20px"
      },
      {
        "type": "color",
        "id": "header_font_color",
        "label": "Header Font Color",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "header_font_weight",
        "label": "Header Font Weight (e.g. 100-800)",
        "default": "500"
      },
      {
        "type": "color",
        "id": "page_description_font_color",
        "label": "Page Description Font Color",
        "default": "#000000"
      },
      {
        "type": "text",
        "id": "padding_between_descriptions",
        "label": "Padding Between Descriptions",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "description_two_color",
        "label": "Description Two Color",
        "default": "#000000"
      }      
    ],
    "presets": [
      {
        "name": "Slider",
        "category": "Advanced layout"
      }
    ]
  }
{% endschema %}

<section class="slider_section">
  <div class="slider_container">
    <div class="square">
    </div>
    <div class="slider_svg">
      {% include 'slider.svg' %}
    </div>
    <div class="secrets">
      <img src="https://cdn.shopify.com/s/files/1/0449/1667/0615/products/Diamond_CK_WN_1400x.jpg?v=1631754527">
    </div>
  </div>

</section>

<script>
  document.querySelectorAll(".slider_svg path").forEach((el)=>{el.addEventListener("click", () => { 
     console.log("clicked slider");
     document.querySelector(".slider_svg").classList.add("move");                                                         
                                                               
  })});
</script>

<style>  
  .square {
    width: 400px;
    z-index: 100;
    background-color: white; 
  }
  .secrets img {
    position: absolute;
    left: 590px;
    top: 90px;
    height: 50px;
    z-index: 0;
  }
  .slider_container {
    display: flex; 
    margin: 0 auto;
    position: relative;
  }
  path:hover {
   cursor: pointer; 
  }
  svg:hover {
   animation: slight-rotate 1s linear infinite;
  }
  @keyframes slight-rotate {
       0% {
          transform: rotate(0deg)  
      }
      50% {
        transform: rotate(3deg)
      }
      100% {
        transform: rotate(0deg)
      }
  }

  .slider_svg {
   flex-basis: 400px;
   z-index: 10;
  }
  .slider_svg.move {
    transform: translateX(-50%);
    animation-duration: 750ms;
  }
  .shopify-section.page-top-section {
    background-color: {{section.settings.background_color}};
  }
  
  .wave-divider path {
    fill: {{ section.settings.wave_bottom_color }};
  }
  
  .page-top-section .page_a_container {
    margin-top: -40px;
    padding-top: {{ section.settings.spacing_top }};
    margin-bottom: {{section.settings.spacing_bottom}};
    background-color: {{section.settings.background_color}};
  }
  
  .page-top-section  .page_a_container .page_a_section_description {
    margin-bottom: {{section.settings.padding_between_descriptions}};
  }
  
  body {
   background-color:#FFF;
  }
  
  
  .page-header,
  .content-util {
   display:none;
  }
  
  .page_a_section_title {
    font-weight: {{ section.settings.header_font_weight }};
	font-size: {{ section.settings.header_font_size }};
    color: {{ section.settings.header_font_color }};
  }
  
  .page_a_section_description {
    color: {{ section.settings.page_description_font_color }};
  }



  @media only screen and (max-width: 700px) {
    .page-top-section  .page_a_container {
      padding-top: {{ section.settings.mobile_spacing_top }};
      margin-bottom: {{ section.settings.mobile_spacing_bottom }};
    }
    .page_a_section_title, .page_a_section_description {
      text-align: left;
    }
    .start_flex {
      display: block;
    }
  }

</style>

{% javascript %}
{% endjavascript %}
