{% schema %}
{
  "name": "Password page",
  "class": "password-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 100,
      "max": 1180,
      "step": 20,
      "unit": "px",
      "label": "Logo maximum width",
      "default": 280
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Coming Soon"
    },
    {
      "type": "text",
      "id": "header_font",
      "label": "Header Font",
      "default": "'p22-mackinac-pro', serif"
    },
    {
      "type": "text",
      "id": "header_font_size",
      "label": "Header Font Size",
      "default": "36px"
    },
    {
      "type": "text",
      "id": "header_font_weight",
      "label": "Header Font Weight",
      "default": "800"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter form",
      "default": true
    },
    {
      "type": "richtext",
      "id": "newsletter_subheading",
      "label": "Subheading",
      "default": "<p>Subscribe to be the first to hear about our exclusive offers and latest arrivals.</p>"
    },
    {
      "type": "header",
      "content": "Social"
    },
    {
      "type": "checkbox",
      "id": "show_social_share",
      "label": "Show social share buttons",
      "default": true
    },
    {
      "type": "text",
      "id": "social_share_title",
      "label": "Social share buttons heading",
      "default": "Share the news"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Text",
      "default": "#4f4f4f"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Title",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "color_accent",
      "label": "Accent",
      "default": "#008080"
    },
    {
      "type": "text",
      "id": "email_confirm_message",
      "label": "Email Confirmation Message",
      "default": "hi hi, thanks for your memail."
    },
    {
      "type": "color",
      "id": "email_confirm_color",
      "label": "Email Confirmation Message Color",
      "default": "#F6B700"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "1500 x 1100px .jpg recommended"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background image",
      "info": "1500 x 1100px .jpg recommended"
    }
  ]
}
{% endschema %}
